body {
    background-color: white;
    font-family: Arial, sans-serif;
    line-height: 1.6;
    margin: 0;
    padding: 0;
}

header {
    background-color: #007bff;
    color: white;
    padding: 20px;
    text-align: center;
}

header h1 {
    margin: 0;
}

h1 {
    font-size: 2.5rem;
    margin-bottom: 10px;
}

nav ul {
    list-style-type: none;
    margin: 0;
    padding: 0;
}

nav ul li {
    display: inline;
    margin-right: 20px;
}

nav ul li a {
    color: white;
    text-decoration: none;
    padding: 10px 20px;
    transition: background-color 0.5s;
}

nav ul li a:hover {
    background-color: rgba(255, 255, 255, 0.2);
    border-radius: 10px;
}

.container {
    width: 300px;
    margin: 50px auto;
    background-color: #e7f2ff;
    text-align: center;
    border-radius: 5px;
    position: relative;
    padding: 50px;
}

.container h2 {
    color: #007bff;
}

input[type="text"],
input[type="password"],
input[type="submit"],
input[type="checkbox"] {
    width: calc(100% - 40px); /* Adjusted width to accommodate the toggle button */
    height: 30px;
    margin-bottom: 10px;
    padding: 5px;
    box-sizing: border-box;
    border-radius: 5px;
    border: 1px solid #ccc;
}

input[type="submit"] {
    background-image: linear-gradient(to right, #000000, #808080);
    color: white;
    cursor: pointer;
}

input[type="submit"]:hover {
    background-image: linear-gradient(to right, #333333, #555555);
}

a {
    color: #007bff;
    text-decoration: none;
}

a:hover {
    text-decoration: underline;
}

.container a {
    color: #007bff;
}

.password-container {
    position: relative;
}

.password-toggle {
    position: absolute;
    top: 47.5%; /* Adjusted to 50% */
    right: 75px; /* Adjusted right position */
    transform: translateY(-50%);
    cursor: pointer;
    width: 20px;
    height: 20px;
    background-image: url('eye_crossed_icon.png'); /* Replace 'eye.svg' with your icon file */
    background-size: cover;
}

.password-toggle {
    position: absolute;
    top: 53%; /* Adjusted to 50% */
    right: 75px; /* Adjusted right position */
    transform: translateY(-50%);
    cursor: pointer;
    width: 20px;
    height: 20px;
    background-image: url('eye_crossed_icon.png'); /* Replace 'eye.svg' with your icon file */
    background-size: cover;
}



.password-toggle.active {
    background-image: url('eye_icon.png'); /* Replace 'eye-slash.svg' with your icon file */
}
